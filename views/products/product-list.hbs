<container-fluid>
    <br>
    <div class="row">
        {{#each added}}
        <div class="col-md-4 list pro">
            <div class="card" style="width: 18rem;">
                <h5 class="card-title">{{name}}</h5>
                <img src="/images/products.jpg" class="card-img-top" alt="Our Products">
                <div class="card-body">
                   
                    <br>
                    <a href="/our-products/{{id}}" class="btn btn-outline-danger">View Details</a>
                </div>
            </div>


        </div>
        {{/each}}
    </div>
    <div class="row">
        {{#each products}}
        <div class="col-md-4 list pro">
            <div class="card" style="width: 18rem;">
                <h5 class="card-title">{{name}}</h5>
                <img src="/images/products.jpg" class="card-img-top" alt="Our Products">
                <div class="card-body">
                    <br>
                    <a href="/our-products/{{id}}" class="btn btn-outline-danger">View detail</a>
                </div>
            </div>

        </div>
