<h1>{{name}}</h1>
<p>Ingredients: {{ingredient_list}}</p>
<p> Brand : {{brand}}</p>
{{#if imageUrl}}
<img src="{{imageUrl}}" />
{{/if}}
<button><a href="/products/{{id}}/edit">Edit Product</a></button>
<hr>
<form action="/favorites/{{id}}" method="POST">
<button class="addToFavBtn">Add to Favorites</button>
</form>

<hr>
<p>Add a review</p>
<form action="/reviews/{{id}}/add" method="POST">
<label>Name</label>
<input type="text" name="name" />

<label>Comment</label>
<textarea name="comment" cols="40" rows="7"></textarea>

<button type="submit">Add review</button>
</form>
<hr>
{{#each reviews}}
<p>{{name}}  - "{{comment}}" </p>
{{/each}}

