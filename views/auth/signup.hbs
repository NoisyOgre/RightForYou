
<form action="/signup" method="POST">
<div class="container">
        <div class="row">
                <div class="col-md-12 signInBox">
                    <div class="intro">
                        <div class="introText">
                            <h2>Signup</h2>
                            <label>Username</label>
                            <br>
                            <input type="text" name="username" required />
                            <br>
                            <label>Password</label>
                            <br>
                            <input type="password" name="password" required />
                            <br>
                            <button type="submit" class="btn btn-dark sm-lg">Signup</button>
                            <br>
                            </form>
                            {{#if errorMessage}}
                            <p>{{errorMessage}}</p>
                            {{/if}}
                        </div>
                    </div>
                </div>
        </div>
 </div>


