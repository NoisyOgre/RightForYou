<h1>{{title}}</h1>
<h3>Summary: {{description}}</h3>
<p> Author: {{author.name}}</p>
<p>{{rating}}</p>
{{#if imageUrl}}
<img src="{{imageUrl}}" />
{{/if}}

<button><a href="/books/{{id}}/edit">Edit Book</a></button>
<hr>
<p>Add a review</p>
<form action="/reviews/{{id}}/add" method="POST">
<label>Name</label>
<input type="text" name="name" />

<label>Comment</label>
<textarea name="comment" cols="40" rows="7"></textarea>

<button type="submit">Add review</button>
</form>
<hr>
{{#each reviews}}
<p>{{name}}  - "{{comment}}" </p>
{{/each}}

